{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "LANscape: Run Module (Debug Mode)",
            "type": "debugpy",
            "request": "launch",
            "module": "lanscape",
            "console": "integratedTerminal",
            "args": [
                "--debug"
            ],
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "justMyCode": true
        },
        {
            "name": "LANscape: Run Module (Production)",
            "type": "debugpy",
            "request": "launch",
            "module": "lanscape",
            "console": "integratedTerminal",
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "LANscape: Run with Custom Args",
            "type": "debugpy",
            "request": "launch",
            "module": "lanscape",
            "console": "integratedTerminal",
            "args": [
                "${input:customArgs}"
            ],
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "LANscape: Test Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Python: Pytest Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": ["tests", "-v"],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ],
    "inputs": [
        {
            "id": "customArgs",
            "description": "Enter custom arguments for LANscape",
            "default": "--help",
            "type": "promptString"
        }
    ]
}